{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./"
  },
  "include": ["./"]
}
